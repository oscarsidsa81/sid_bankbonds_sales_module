<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================================================
         FORM VIEW: Aval (sid_bonds_orders)
         ========================================================= -->
    <record id="view_bond_order_form" model="ir.ui.view">
        <field name="name">sid_bonds_orders.form</field>
        <field name="model">sid_bonds_orders</field>
        <field name="groups_id" eval="[(4, ref('sid_bankbonds_sales_module.group_bonds_manager'))]"/>
        <field name="arch" type="xml">
            <form string="Aval">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': true}"/>
                </header>

                <sheet>

                    <!-- Botón estadístico: Pedidos -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="object"
                                name="action_view_sale_orders"
                                icon="fa-tags"
                                attrs="{'invisible': [('order_ids', '=', False)]}"
                                domain="[('quotations_id','in', order_ids.ids), ('partner_id','=', partner_id), ('state','=','sale')]">
                            <div class="o_stat_info">
                                <field name="base_pedidos" widget="statinfo" nolabel="1"/>
                                <span class="o_stat_text">Pedidos</span>
                            </div>
                        </button>
                    </div>

                    <!-- Ribbon: Cancelado -->
                    <div>
                        <widget name="web_ribbon"
                                title="Cancelado"
                                bg_color="bg-danger"
                                attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    </div>

                    <!-- Cabeceras -->
                    <group>
                        <group>
                            <div class="o_form_label"
                                 style="font-size:14px;font-weight:bold;text-decoration:underline;">
                                Tipo de aval
                            </div>
                        </group>
                        <group>
                            <div class="o_form_label"
                                 style="font-size:14px;font-weight:bold;text-decoration:underline;">
                                Datos Banco
                            </div>
                        </group>
                    </group>

                    <!-- Datos -->
                    <group>
                        <group>
                            <field name="aval_type"/>
                            <field name="reference"/>
                            <field name="issue_date"/>
                            <field name="due_date"/>
                            <field name="order_ids" widget="many2many_tags"/>
                            <field name="origin_document" readonly="1"/>
                        </group>

                        <group>
                            <field name="partner_id"
                                   domain="[('is_company','=',True)]"
                                   options="{'no_open':true,'no_create':true}"/>
                            <field name="journal_id"
                                   domain="[('code','ilike','BNK')]"/>
                            <field name="amount" widget="monetary"
                                   options="{'currency_field':'currency_id'}"/>
                            <field name="currency_id"/>
                            <field name="is_digital"/>
                            <field name="reviewed"/>
                        </group>
                    </group>

                    <!-- Documento -->
                    <group string="Documento">
                        <field name="pdf_aval" widget="pdf_viewer"/>
                    </group>

                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- =========================================================
         TREE VIEW
         ========================================================= -->
    <record id="view_bond_order_tree" model="ir.ui.view">
        <field name="name">sid_bonds_orders.tree</field>
        <field name="model">sid_bonds_orders</field>
        <field name="groups_id" eval="[(4, ref('sid_bankbonds_sales_module.group_bonds_manager'))]"/>
        <field name="arch" type="xml">
            <tree string="Avales">
                <field name="aval_type"/>
                <field name="reference"/>
                <button class="oe_inline" icon="fa-suitcase" name="action_view_sale_orders" type="action" help="Pedidos"/>
                <field name="order_ids" widget="many2many_tags"/>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <field name="issue_date"/>
                <field name="due_date"/>
                <field name="base_pedidos"/>
                <field name="amount" widget="monetary"
                       options="{'currency_field':'currency_id'}"/>
                <field name="currency_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- =========================================================
         SEARCH VIEW
         ========================================================= -->
    <record id="view_bond_order_search" model="ir.ui.view">
        <field name="name">sid_bonds_orders.search</field>
        <field name="model">sid_bonds_orders</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <field name="aval_type"/>
                <field name="state"/>

                <filter string="Pendientes"
                        name="filter_pending"
                        domain="[('state','in',('draft','pending_bank'))]"/>

                <filter string="Cancelados"
                        name="filter_cancel"
                        domain="[('state','=','cancelled')]"/>

                <group expand="0" string="Agrupar por">
                    <filter string="Cliente" name="grp_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Banco" name="grp_journal" context="{'group_by': 'journal_id'}"/>
                    <filter string="Estado" name="grp_state" context="{'group_by': 'state'}"/>
                    <filter string="Tipo" name="grp_type" context="{'group_by': 'aval_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- =========================================================
         ACTION + MENU
         ========================================================= -->
    <record id="action_bonds_orders" model="ir.actions.act_window">
        <field name="name">Avales</field>
        <field name="res_model">sid_bonds_orders</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('sid_bankbonds_sales_module.group_bonds_manager'))]"/>
    </record>

    <menuitem id="menu_bonds_orders"
              parent="sale.sale_order_menu"
              name="Avales"
              action="action_bonds_orders"
              groups="sid_bankbonds_sales_module.group_bonds_manager"
              sequence="50"/>

</odoo>
