<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- =========================================================
             FORM VIEW: Contrato/Pedido (sale.quotations)
             ========================================================= -->
        <record id="sale_quotations_view_form" model="ir.ui.view">
            <field name="name">sale.quotations.form.ov_avales</field>
            <field name="model">sale.quotations</field>
            <field name="arch" type="xml">
                <form string="Contrato/Pedido">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Contrato/Pedido"/>
                                <field name="parent_id" string="Principal"/>
                                <field name="child_ids" string="Adendas" readonly="1"/>

                                <!-- Presupuestos / Pedidos enlazados -->
                                <field name="sale_order_ids"
                                       domain="[('state','=','done')]"
                                       style="width: 100%"
                                       colspan="5"
                                       force_save="True"
                                       attrs="{}"
                                       readonly="1">
                                    <tree string="Presupuestos" create="0">
                                        <field name="opportunity_id"/>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount_untaxed" optional="show"/>
                                        <field name="user_id"/>
                                        <field name="state"
                                               widget="badge"
                                               decoration-success="state == 'done'"/>
                                    </tree>
                                </field>

                                <!-- Avales enlazados -->
                                <field name="bond_ids"
                                       string="Avales"
                                       style="width: 100%"
                                       colspan="5"
                                       force_save="True"
                                       attrs="{}"
                                       readonly="1">
                                    <tree string="Avales" create="0">
                                        <field name="name"/>
                                        <field name="reference"/>
                                        <field name="amount" optional="show"/>
                                        <field name="state"
                                               widget="badge"
                                               decoration-success="state == 'done'"
                                               decoration-info="state not in ('done', 'cancel')"/>
                                    </tree>
                                </field>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- =========================================================
             TREE VIEW: sale.quotations
             ========================================================= -->
        <record id="sale_quotations_view_tree" model="ir.ui.view">
            <field name="name">sale.quotations.tree</field>
            <field name="model">sale.quotations</field>
            <field name="arch" type="xml">
                <tree string="Contracts">
                    <field name="name" string="Contract" readonly="1" decoration-bf="1"/>
                    <field name="sale_order_ids" readonly="1"/>
                </tree>
            </field>
        </record>

        <!-- =========================================================
             SEARCH VIEW: sale.quotations
             ========================================================= -->
        <record id="sale_quotations_view_search" model="ir.ui.view">
            <field name="name">sale.quotations.search</field>
            <field name="model">sale.quotations</field>
            <field name="arch" type="xml">
                <search string="Search Sales Order">
                    <field name="name"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
