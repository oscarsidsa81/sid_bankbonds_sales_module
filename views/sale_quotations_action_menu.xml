<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Acción -->
        <record id="action_sale_quotations" model="ir.actions.act_window">
            <field name="name">Quotations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.quotations</field>
            <field name="view_mode">tree,form</field>

            <!-- Usa tus vistas del módulo -->
            <field name="view_id" ref="sid_bankbonds_sales_module.sale_quotations_view_tree"/>
            <field name="search_view_id" ref="sid_bankbonds_sales_module.sale_quotations_view_search"/>

            <!-- opcional: define las vistas explícitamente para evitar que Odoo elija mal -->
            <field name="view_ids" eval="[
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('sale_quotations_sale_quotations_tree')}),
                     (0, 0, {'view_mode': 'form', 'view_id': ref('sale_quotations_form')})
                    ]"/>

            <!-- Opcional: contexto/dominio si quieres -->
            <!-- <field name="domain">[]</field> -->
            <field name="context">{}</field>
        </record>

        <!-- Menú: Ventas / Pedidos / Quotations -->
        <menuitem id="menu_sale_quotations"
                  name="Quotations"
                  parent="sale.sale_order_menu"
                  action="action_sale_quotations"
                  sequence="10"/>
    </data>
</odoo>
